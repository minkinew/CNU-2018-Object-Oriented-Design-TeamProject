<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_backgrounds"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="0dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TableRow
                android:id="@+id/cpuRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView_CPU"
                    android:layout_width="150dp"
                    android:layout_height="144dp"
                    app:srcCompat="@android:color/background_dark"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="40dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic[2]" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_CPUTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/click"
                        android:text="CPU"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Button"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/textView_CPUPrice"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="가격 : 0000원"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="24sp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:id="@+id/gpuRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
